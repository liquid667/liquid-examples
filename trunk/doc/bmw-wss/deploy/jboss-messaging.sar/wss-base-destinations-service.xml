<?xml version="1.0" encoding="UTF-8"?>
<server>
	<!-- Notifies the business layer (for example CSP) of service events -->
	<mbean code="org.jboss.jms.server.destination.TopicService"
        name="jboss.messaging.destination:service=Topic,name=ServiceEvents"
        xmbean-dd="xmdesc/Topic-xmbean.xml">
      <depends optional-attribute-name="ServerPeer">jboss.messaging:service=ServerPeer</depends>
      <depends>jboss.messaging:service=PostOffice</depends>
		<!-- redeliver the message after 3 seconds -->
		<attribute name="RedeliveryDelay">3000</attribute>
		<!-- redeliver the message maximum 10 times -->
		<attribute name="MaxDeliveryAttempts">10</attribute>
        <attribute name="Clustered">true</attribute>
	</mbean>

	<!-- CSP topic which notifies the web layer of service events -->
	<mbean code="org.jboss.jms.server.destination.TopicService"
        name="jboss.messaging.destination:service=Topic,name=CSPServiceNotification"
        xmbean-dd="xmdesc/Topic-xmbean.xml">
      <depends optional-attribute-name="ServerPeer">jboss.messaging:service=ServerPeer</depends>
      <depends>jboss.messaging:service=PostOffice</depends>
      <attribute name="Clustered">true</attribute>
	</mbean>
	
	<!--  CSP POI Notification Topic-->
	<mbean code="org.jboss.jms.server.destination.TopicService"
        name="jboss.messaging.destination:service=Topic,name=PoiNotification"
        xmbean-dd="xmdesc/Topic-xmbean.xml">
      <depends optional-attribute-name="ServerPeer">jboss.messaging:service=ServerPeer</depends>
      <depends>jboss.messaging:service=PostOffice</depends>
	  <!-- redeliver the message after 3 seconds -->
	  <attribute name="RedeliveryDelay">3000</attribute>
	  <!-- redeliver the message maximum 10 times -->
	  <attribute name="MaxDeliveryAttempts">10</attribute>
      <attribute name="Clustered">true</attribute>
	</mbean>

</server>
