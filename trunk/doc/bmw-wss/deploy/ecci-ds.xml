<?xml version="1.0" encoding="UTF-8"?>

<!-- ===================================================================== -->
<!--                                                                       -->
<!--    Wirelesscar Safety and Security Platform Datasources   (BMWNG)     -->
<!--                                                                       -->
<!-- ===================================================================== -->

<datasources>

  <xa-datasource>
    <jndi-name>EcciDS</jndi-name>
    <track-connection-by-tx>true</track-connection-by-tx>
    <isSameRM-override-value>false</isSameRM-override-value>
    <xa-datasource-class>oracle.jdbc.xa.client.OracleXADataSource</xa-datasource-class>
    <xa-datasource-property name="URL">${wcar.wss.wssds.url}</xa-datasource-property>
    <xa-datasource-property name="User">${wcar.wss.wssds.user}</xa-datasource-property>
    <xa-datasource-property name="Password">${wcar.wss.wssds.password}</xa-datasource-property>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.OracleExceptionSorter</exception-sorter-class-name>
    <max-pool-size>20</max-pool-size>
    <no-tx-separate-pools/>
  </xa-datasource>

</datasources>
