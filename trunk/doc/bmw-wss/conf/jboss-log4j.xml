	</category>

	<category name="com.wirelesscar.common.property.mbean.SystemPropertiesServiceMonitoring">
		<priority value="INFO"/>
	</category>

	<category name="com.wirelesscar.wss.csp.web.util.EjbBeanPostProcessor">
		<priority value="INFO"/>
	</category>

	<category name="com.wirelesscar.cgw">
		<priority value="WARN"/>
	</category>

	<category name="com.wirelesscar.ecci.business.schedueling">
		<priority value="INFO"/>
	</category>

