	<!-- Destination ping log -->
	<category name="bmwngtp.destping.log" additivity="false">
		<priority value="DEBUG"/>
		<appender-ref ref="DESTPINGLOG"/>
	</category>

	<!-- Destination ping status -->
	<category name="bmwngtp.destping.status" additivity="false">
		<priority value="DEBUG"/>
		<appender-ref ref="DESTPINGSTATUS"/>
	</category>

	<!-- Browser log -->
	<category name="wss.browser.log" additivity="false">
		<priority value="DEBUG"/>
		<appender-ref ref="BROWSER"/>
	</category>

	<!-- Method invocation statistics log -->
	<category name="bmwngtp.invocation.statistics.log" additivity="false">
		<priority value="DEBUG"/>
		<appender-ref ref="INVOCATIONSTATISTICS"/>
	</category>

	<!-- Struts 2 -->
	<category name="com.opensymphony">
		<priority value="WARN"/>
	</category>

	<!-- Freemarker -->
	<category name="freemarker">
		<priority value="WARN"/>
	</category>

	<!-- Spring -->
	<category name="org.springframework">
		<priority value="WARN"/>
	</category>

	<!-- DWR -->
	<category name="org.directwebremoting" additivity="false">
		<priority value="WARN"/>
	</category>
	<category name="org.directwebremoting.impl.DefaultRemoter" additivity="false">
		<priority value="WARN"/>
	</category>

	<!-- JAWR -->
	<category name="net.jawr">
		<priority value="INFO"/>
	</category>

	<!-- Quartz -->
	<category name="org.quartz">
		<priority value="INFO"/>
	</category>

	<!-- Dozer -->
	<category name="org.dozer">
		<priority value="INFO"/>
	</category>

	<!-- Limit the org.apache category to INFO as its DEBUG is verbose -->
	<category name="org.apache">
		<priority value="INFO"/>
	</category>

	<category name="com.arjuna">
		<priority value="INFO"/>
	</category>

	<!-- Limit the org.jgroups category to WARN as its INFO is verbose -->
	<category name="org.jgroups">
		<priority value="WARN"/>
	</category>

	<!-- Limit jboss axis to INFO as its DEBUG is even more verbose -->
	<category name="org.jboss.axis">
		<priority value="INFO"/>
	</category>

	<!-- Limit JBoss categories -->
	<category name="org.jboss">
		<priority value="INFO"/>
	</category>

	<category name="org.jboss.mx.loading">
		<priority value="INFO"/>
	</category>

	<!-- Limit the JSR77 categories -->
	<category name="org.jboss.management">
		<priority value="INFO"/>
	</category>

	<!-- timer warn problem -->
	<category name="org.jboss.ejb.txtimer.TimerImpl">
		<priority value="ERROR"/>
	</category>

	<category name="org.hibernate" additivity="false">
		<priority value="WARN"/>
	</category>

	<category name="org.tinyradius" additivity="false">
		<priority value="INFO"/>
	</category>

	<category name="httpclient" additivity="false">
		<priority value="INFO"/>
	</category>

	<!-- Limit Mule SedaService to INFO as it's DEBUG is verbose during polling -->
	<category name="org.mule.model.seda.SedaService">
